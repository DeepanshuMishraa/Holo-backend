{
  "name": "be",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev src/index.ts",
    "postinstall": "prisma generate",
    "start": "node dist/_worker.js",
    "deploy": "wrangler deploy src/index.ts",
    "build": "wrangler deploy --dry-run src/index.ts",
    "vercel-build": "bunx esbuild --bundle src/index.ts --platform=node --format=esm --outfile=dist/_worker.js && bun db:migrate && bun db:generate",
    "db:migrate": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "bun run src/lib/seed.ts"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20240208.0",
    "@google/generative-ai": "^0.21.0",
    "@hono/zod-validator": "^0.4.2",
    "@kinde-oss/kinde-typescript-sdk": "^2.9.1",
    "@prisma/client": "^6.3.1",
    "@types/node": "^22.13.1",
    "@types/react": "^19.0.10",
    "better-auth": "^1.1.17",
    "hono": "^4.7.0",
    "prisma": "^6.3.1",
    "resend": "^4.1.2",
    "web-streams-polyfill": "^4.1.0",
    "zod": "^3.24.1"
  }
}
